<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Jsp05_HelloServlet</display-name>
    <!-- 웹 어플리케이션 실행 시 가장 먼저 보여줄 페이지를 정의, 시작페이지-->
	<welcome-file-list>
  		<welcome-file>home.html</welcome-file>
	</welcome-file-list>

	<!--어플리케이션 전체의 전역 파라미터 설정 -->
	<context-param>
 		<param-name>url</param-name>
 		<!-- http://localhost:8787/Jsp05_HelloServlet/home.html -->
 		<param-value>localhost:8787/Jsp05_HelloServlet</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>helloServlet</servlet-name>
		<servlet-class>com.hello.controller.HelloController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	<!-- /hello 라는 요청이 클라이언트로부터 들어오게 되면 ws가 관리하는 내용중에서 mapping 처리됨 
		  HelloController 서블릿이 동작한다. -->
			  
	<servlet>
		<servlet-name>byeServlet</servlet-name>
		<servlet-class>com.bye.controller.ByeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>byeServlet</servlet-name>
		<url-pattern>/bye</url-pattern>
	</servlet-mapping>
	
	
	
</web-app>